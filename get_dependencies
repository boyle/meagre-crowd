  sed -i "s/\(^METISLIB.*=\).*/\1 ${METIS_DLIB//\//\\/}/" make.inc
  sed -i "s/\(^PARMETISLIB.*=\).*/\1 ${METIS_DLIB//\//\\/}/" make.inc
